{{> content_top}}

<div class="col-md-8">
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{page.head.extra.author_image}}" class="img-fluid rounded-start"
                    alt="{{page.head.title}}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{page.head.title}}</h5>
                    <div class="card-text">
                        {{{page.body}}}
                    </div>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>
    </div>
</div>


